 
######################
# - Conky settings - #
######################
update_interval 2
total_run_times 0
net_avg_samples 0
cpu_avg_samples 2
if_up_strictness link
 
imlib_cache_size 0
double_buffer yes
no_buffers yes
background yes
 
format_human_readable
 
#####################
# - Text settings - #
#####################
use_xft yes
xftfont Liberation Sans:size=9
override_utf8_locale yes
text_buffer_size 4096
#text_buffer_size 2048
 
#############################
# - Window specifications - #
#############################
own_window_class Conky
own_window yes
own_window_type normal
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value 255
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour black
 
alignment top_right
gap_x 0
gap_y 40
minimum_size 260 80
maximum_width 280
 
default_bar_size 60 8
 
#########################
# - Graphics settings - #
#########################
draw_shades no
stippled_borders 1
 
default_color 1793d0
color0 white
color1 1793d0
color2 white
color3 1793d0
color4 D8DEE9
color5 D8DEE9
#############
# - CLOCK - #
#############
TEXT
${voffset 10}${alignc}${color5}${font Overpass:style=Bold:size=30}${time %I:%M %p}
${voffset -20}${alignc}${font Overpass:style=Regular:size=13}${time ( %A, %B %e )}${font}${color}
##############
# - SYSTEM - #
##############
${voffset -4}${color4}${font Overpass:style=Regular:size=11}
${alignc}Core: ${cpu cpu1}%
${alignc}RAM: $mem / $memmax
${alignc}Processes: $processes
${font}